{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on"
        }
      }
    }
  },
  "files": {
    "includes": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "ignoreUnknown": true
  },
  "overrides": [
    {
      "includes": [
        "src/components/ui/**"
      ],
      "linter": {
        "enabled": false
      }
    }
  ]
}
